{
    "BIDSModelVersion": "1.0.0",
    "Name": "SPM_MoAE",
    "Description": "Mother of all experiments: simple block model to be run with fitlins",
    "Input": {
        "task": ["auditory"]
    },
    "Nodes": [
        {
            "Level": "run",
            "Name": "run level",
            "GroupBy": [
                "run"
            ],
            "Transformations": {
                "Transformer": "pybids-transforms-v1",
                "Instructions": [
                    {
                        "Name": "Convolve",
                        "Model": "spm",
                        "Input": [
                            "trial_type.listening"
                        ]
                    }
                ]
            },
            "Model": {
                "X": [
                    "trial_type.listening"
                ],
                "Type": "glm",
                "Options": {
                    "HighPassFilterCutoffHz": 0.008
                },
                "Software": [
                    {
                        "SPM": {
                            "Whitening": "AR(1)"
                        }
                    }
                ]
            },
            "DummyContrasts": {
                "Contrasts": [
                    "trial_type.listening"
                ],
                "Test": "t"
            }
        }
    ]
}